{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/next"
        },
        {
            "src": "server/server.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/server/server.js"
        },
        {
            "source": "/uploads/(.*)",
            "destination": "/server/uploads/$1"
        },
        {
            "source": "/",
            "destination": "/client"
        },
        {
            "source": "/((?!api|uploads).*)",
            "destination": "/client/$1"
        }
    ]
}