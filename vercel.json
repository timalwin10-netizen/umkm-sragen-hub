{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/server/server.js"
        },
        {
            "source": "/uploads/(.*)",
            "destination": "/server/uploads/$1"
        },
        {
            "source": "/((?!api|uploads).*)",
            "destination": "/client/$1"
        }
    ],
    "functions": {
        "server/server.js": {
            "runtime": "@vercel/node"
        }
    }
}